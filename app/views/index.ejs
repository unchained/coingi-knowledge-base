<section class="container-fluid search pt-5 pb-4 pt-md-5">
    <div class="row">
        <div class="col">
            <div class="search__container py-md-5">
                <h1 class="search__title text-center text-white">How can we help you<span class="d-none d-sm-inline"> today</span>?
                </h1>
                <form action="" id="searchForm" class="mt-4 mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text search__addon" id="search-addon"><i class="fal fa-search"></i></span>
                        </div>
                        <input type="text" name="query" class="search__input form-control" placeholder="Find tutorials, articles, issues and more" aria-describedby="search-addon" autofocus>
                    </div>
                    <div class="search__results">
                        <ul class="nav flex-column">

                        </ul>
                    </div>
                </form>
                <div class="search__popular">
                    <a class="search__link" href="#">cryptocurrency</a>
                    <a class="search__link" href="#">bitcoin</a>
                    <a class="search__link" href="#">stock exchange</a>
                    <a class="search__link" href="#">blockchain</a>
                    <a class="search__link" href="#">hodl</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="topics pt-5 pb-2">
    <div class="container">
        <div class="row">
            <div class="col topics__wrapper">
                <% for (let [categoryId, category] of Object.entries(categories)) { %>
                <a href="/category/<%- categoryId %>" class="card">
                    <div class="card-body">
                        <i class="fal <%= category.icon %> mb-3"></i>
                        <h2 class="card-title"><%= category.name %></h2>
                        <% if (category.description){ %>
                        <p><%= category.description %></p>
                        <% } %>
                    </div>
                </a>
                <% } %>
            </div>
        </div>
    </div>
</section>


<section class="pt-5 pb-4 py-md-5 category-section">
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="mb-4">
                    <i class="category-section__icon far fa-newspaper"></i>
                    Popular articles
                </h2>
                <ul class="list--unordered list--two-columns">
                    <% for (const [articleId, article] of demoRelatedArticles) { %>
                    <li>
                        <a href="/article/<%= articleId %>"><%- article.title %></a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</section>
